<h2>Events you liked</h2>

@{
    foreach (Event e in Model.EventCartItems)
    {
        @Html.Partial("EventCartItem", e);
    }
}

@if (Model.EventCartItems.Count != 0)
{
    <br />
    <div class="row">
        <div class="col-lg-6" style="text-align: left">
            @using (Html.BeginForm("ClearEventCart", "EventCartItems"))
            {
                <input type="submit" value="Remove all events" class="delete" />
            }
        </div>
    </div>
}
else
{
    <h4>For now you don't like any events</h4>
}
