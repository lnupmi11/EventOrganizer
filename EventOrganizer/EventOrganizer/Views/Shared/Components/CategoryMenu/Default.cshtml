<li class="dropdown">
    <a asp-controller="Event"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Events<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Events" asp-action="List"
                   asp-route-category="@category.Name"
                   asp-route-pagenumber=0>@category.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Events" asp-action="List" asp-route-category="" asp-route-pagenumber=0>View all events</a>
        </li>
    </ul>
</li>